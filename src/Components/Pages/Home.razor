@page "/"
@using Conesoft.Website.Inklay.Components.Controls

<PageTitle>Inklay</PageTitle>

<style>
    * {
        margin: 0;
        padding: 0;
        font-size: 20px;
        line-height: 1em;
        font-family: sans-serif;
        box-sizing: border-box;
    }

    html {
        width: 100%;
        height: 100%;
        display: grid;
        justify-items: center;
        align-items: center;
        background-color: #111;

        user-select: none;
    }

    img {
        max-width: 100%;
    }

    body {
        width: 1200px;
        height: 825px;
        background-color: white;
        position: relative;
        filter: drop-shadow(0 2rem 3rem black) drop-shadow(0 0 5rem black) drop-shadow(0 0rem 48rem white);
        outline: 4rem solid black;
        overflow: hidden;
    }

    section, main, header, footer {
        position: absolute;
        inset: 0;
        overflow: hidden;
    }

    main {
        width: 500px;
        left: 350px;
        right: 350px;
        padding-left: 1rem;
        padding-right: 1rem;
    }

    section#left {
        width: 350px;
        padding-left: 1rem;
        right: auto;
    }

    section#right {
        width: 350px;
        padding-right: 1rem;
        left: auto;
    }


    section, main {
        padding-top: 1rem;
    }

        main > * {
            margin-bottom: 1rem;
        }

    footer {
        text-align: center;
        top: auto;
        left: 350px;
        right: 350px;
        margin-bottom: 0.25rem;
        background: white;
    }

    li {
        list-style-type: none;
        line-height: 1rem;
    }

    .check {
        font-size: 1.2rem;
        font-weight: bold;
        display: inline;
        line-height: 1rem;
    }

</style>

<section id="left">
    <Calendar/>
</section>

<main>
    <Weather />
    <Date />
    <img src="/cooper.jpg" />
</main>

<section id="right">
    <Content />
</section>

<footer>
    &copy; davepermen @DateTime.Today.Year <i>last updated @DateTime.Now.ToShortTimeString() @DateTime.Today.ToShortDateString()</i>
</footer>